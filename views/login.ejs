<%- include('partials/head') %>



    <main>

        <!--contact-form-area start-->
        <section class="contact-form-area pt-180 pb-120 pt-md-100 pt-xs-100 pb-md-70 pb-xs-70">
            <div class="container">
                <div class="row justify-content-center align-items-center">
                    <div class="col-lg-6">
                        <div class="contact-form-wrapper text-center mb-30">
                            <h2 class="mb-45">Üye Giriş</h2>
                            <% if(flashMessages) { %>

                                <% if(flashMessages.success) { %>
                                    <div class="alert alert-success">
                                        <%= flashMessages.success %>
                                    </div>
                                <% } else if(flashMessages.error){ %>
                                <div class="alert alert-danger">
                                    <%= flashMessages.error %>
                                </div>
                                    <% } %>
                                <% } %>
                            <form method="POST" action="users/login"  class="row gx-3 comments-form contact-form">
                                <div class="col-lg-12 mb-30">
                                    <input type="text" name="name" placeholder="Kullanıcı adı">
                                </div>
                                <div class="col-lg-12 mb-30">
                                    <input type="password" name="password" placeholder="******">
                                </div>
                                <button type="submit" class="theme_btn message_btn mt-20">GİRİŞ YAP</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--contact-form-area end-->

    </main>

    <%- include("partials/footer") %>