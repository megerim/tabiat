<%- include('partials/head') %>


<main>
    <!--page-title-area start-->
    
     <!--page-title-area end-->
     <!--contact-us-area start-->
     <section class="contact-us-area pt-150 pb-120 pt-md-100 pt-xs-100 pb-md-70 pb-xs-70">
         <div class="container mt-125">
             <div class="row align-items-center">
                 <div class="col-xl-6 col-lg-6">
                     <div class="contact-img mb-30">
                        <img class="img-fluid" src="/img/contact/bg3.png" alt="">
                     </div>
                 </div>
                 <div class="col-xl-6 col-lg-6">
                     
                     <div class="contact-form-wrapper mb-30">
                        <h2 class="mb-45">İletişim Formu</h2>
                        <form method="POST" action="/contact" class="row gx-3 comments-form contact-form">
                            <div class="col-lg-6 col-md-6 mb-30">
                                <input name="name" type="text" placeholder="İsminiz">
                            </div>
                            <div class="col-lg-6 col-md-6 mb-30">
                                <input name="tel" type="tel" placeholder="Telefon Numarası (isteğe bağlı)">
                            </div>
                            
                            <div class="col-lg-12 mb-30">
                                <input type="email" placeholder="Email ">
                            </div>
                            <div class="col-lg-12 mb-30">
                                <textarea name="message" id="message" cols="30" rows="10"
                                    placeholder="Mesaj"></textarea>
                            </div>
                            <button type="submit" class="theme_btn message_btn mt-20">Gönder</button>
                        </form>
                    </div>
                 </div>
             </div>
         </div>
     </section>
     <!--contact-us-area end-->
     <!--contact-map-area start-->
     <section class="contact-map-area">
         <div class="container-fluid px-0">
             <div class="row gx-0">
                 <div class="col-lg-12">
                       <div class="conatct-map">
                           <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3006.613136961259!2d28.80629427684288!3d41.09929857133793!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14caaf13f363a183%3A0x819cf476c040d640!2zQXnFn2Ugw5bEn3JldG1lbiBUYWJpYXQgQW5hb2t1bHU!5e0!3m2!1str!2str!4v1720512326516!5m2!1str!2str" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                       </div>
                 </div>
             </div>
         </div>
     </section>
     <!--contact-map-area end-->
     <!--contact-form-area start-->
     <section class="contact-form-area pt-150 pb-120 pt-md-100 pt-xs-100 pb-md-70 pb-xs-70">
       <div class="container">

           <% if(flashMessages) { %>

               <% if(flashMessages.success) { %>
                   <div class="alert alert-success">
                       <%= flashMessages.success %>
                   </div>
               <% } else if(flashMessages.error){ %>
               <div class="alert alert-danger">
                   <%= flashMessages.error %>
               </div>
                   <% } %>
               <% } %>



           <div class="row align-items-center">
               <div class="col-lg-6">
                   
                <div class="contact-wrapper pl-75 mb-30">
                    <div class="section-title mb-30">
                        <h2>Hemen İletişime Geçin</h2>
                        <p> Aklınızdaki tüm soruları cevaplamaya  sadece bir tık uzağınızdayız. Hemen iletişime geçin.</p>
                    </div>
                    <div class="single-contact-box mb-30">
                        <div class="contact__iocn">
                              <img src="/img/icon/material-location-on.svg" alt="">
                        </div>
                        <div class="contact__text">
                            <h5>Başak, Selvi Sk. Kapı no: 37, Blok: V2 39 </h5>
                        </div>
                    </div>
                    <div class="single-contact-box cb-2 mb-30">
                        <div class="contact__iocn">
                              <img src="/img/icon/phone-alt.svg" alt="">
                        </div>
                        <div class="contact__text">
                            <h5>+90 553 249 11 04</h5>
                        </div>
                    </div>
                    <div class="single-contact-box cb-3 mb-30">
                        <div class="contact__iocn">
                              <img src="/img/icon/feather-mail.svg" alt="">
                        </div>
                        <div class="contact__text">
                            <h5>ayseogretmenanaokulu@gmail.com</h5>
                        </div>
                    </div>
                </div>
               </div>
               <div class="col-lg-6">
                   <div class="contact-img contact-img-02 mb-30">
                       <img class="img-fluid" src="/img/about/bg20.png" alt="">
                   </div>
               </div>
           </div>
       </div>
   </section>
     <!--contact-form-area end-->
      <!-- subscribe-area start -->
      <section class="subscribe-area footer-bg border-bot pt-100 pb-50 pt-md-90 pt-xs-90">
       <div class="container">
           <div class="row justify-content-center">
               <div class="col-xl-8">
                   <div class="subscribe-wrapper text-center mb-30">
                       <h2>Yeniliklerden haberdar olmak için kayıt yaptırın!</h2>
                      <div class="subscribe-form-box pos-rel">
                           <form class="subscribe-form">
                               <input type="text" placeholder="Email">
                           </form>
                           <button class="sub_btn">Kayıt</button>
                      </div>
                   </div>
               </div>
           </div>
       </div>
  </section>
      <!-- subscribe-area end -->
   </main>

