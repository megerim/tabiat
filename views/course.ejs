<%- include('partials/head') %>

<main>
    <section class="blog-details-area pt-150 pb-105 pt-md-100 pb-md-55 pt-xs-100 pb-xs-55">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="blog-details-box mb-45">
                        <h2><%= course.title %></h2>
                        <ul class="blogs__meta mb-30">
                            <li><span class="blog-author"><%= course.category.title %></span></li>
                            <li><span><img src="/img/icon/material-date-range.svg" alt="mate-date">
                                <%= new Date(course.createdAt).toISOString().split('T')[0] %></span></li>
                        </ul>
                        
                        <img src="<%= course.image %>" alt="Blog Image" style="max-width: 100%;">

                        <div class="blog-content mt-4">
                            <%- course.content %> <!-- Render HTML content -->
                        </div>
                    </div>

                    <% if (user.role === 'admin') { %>


                    <div class="d-flex justify-content-between">
                        <a href="/courses/<%= course.slug %>/edit" class="btn btn-outline-warning">Düzenle</a>
                        <form method="POST" action="/courses/<%= course.slug %>?_method=DELETE" onsubmit="return confirm('Bu blog yazısını silmek istediğinize emin misiniz?');">
                            <button type="submit" class="btn btn-outline-danger">Sil</button>
                        </form>
                    </div>
                    <% } %>
                </div>
                <div class="col-lg-4">
                    <div class="blog-widget-area">
                        <div class="widget mb-50">
                            <div class="blog-categories-widget">
                                <h4 class="sub-title pb-20 mb-25 pt-25">Kategoriler</h4>
                                <div class="courses-tag-btn cat-btn">
                                    <% categories.forEach(category => { %>
                                        <a href="/courses?categories=<%= category.slug %>"><%= category.title %></a>
                                    <% }) %>
                                </div>
                            </div>
                        </div>
                        <div class="widget mb-50">
                            <div class="blog-categories-widget">
                                <h4 class="sub-title pb-20 mb-25 pt-25">Diğer Yazılarımız</h4>
                                <ul class="blog-recent-post">
                                    <% courses.slice(0, 4).forEach(post => { %>
                                        <li>
                                            <a href="/courses/<%= post.slug %>">
                                                <div class="posts mb-20">
                                                    <img src="<%= post.image %>" alt="<%= post.title %>" class="img-fluid posts__thumb mb-15">
                                                    <p><%= post.title %></p>
                                                </div>
                                            </a>
                                        </li>
                                    <% }) %>
                                </ul>
                            </div>
                        </div>
                        
                        <div class="widget mb-50">
                            <h4 class="sub-title pb-20 mb-25 pt-25">Social Media</h4>
                            <div class="blog-social-widget">
                                <div class="social-media mb-30">
                                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                                    <a href="#"><i class="fas fa-basketball-ball"></i></a>
                                    <a href="#"><i class="fab fa-youtube"></i></a>
                                    <a href="#"><i class="fab fa-pinterest-p"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include("partials/footer") %>
