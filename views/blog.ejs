<%- include('partials/head') %>
<main>
    <section class="blog-area">
        <div class="blog-bg pt-150 pb-120 pt-md-100 pb-md-70 pt-xs-100 pb-xs-70">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="section-title text-center mb-60">
                            <h2 class="mb-25">Blog Yazıları & Haberler</h2>
                        </div>
                    </div>
                </div>

                <!-- Category Buttons -->
                <div class="row mb-30">
                    <div class="col-lg-12 text-center">
                        <div class="category-buttons">
                            <% for (let i = 0; i < categories.length; i++) { %>
                                <a href="/blog?category=<%= categories[i]._id %>" class="btn btn-secondary"><%= categories[i].title %></a>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Add Post Button -->
                <div class="row mb-30">
                    <div class="col-lg-12 text-center">
                        <a href="/blog/new" class="btn btn-primary">Add New Post</a>
                    </div>
                </div>

                <div class="row">
                    <% for (let i = 0; i < blogs.length; i++) { %>
                        <div class="col-lg-4 col-md-6">
                            <div class="z-blogs mb-30">
                                <div class="z-blogs__thumb mb-30">
                                    <a href="/blogs/<%= blogs[i].slug %>"><img src="/img/blog/01.jpg" alt="blog-img"></a>
                                </div>
                                <div class="z-blogs__content">
                                    <h5 class="mb-25">
                                        <% if (blogs[i].category) { %>
                                            <%= blogs[i].category.title %>
                                        <% } else { %>
                                            Uncategorized
                                        <% } %>
                                    </h5>
                                    <h4 class="sub-title mb-15"><a href="/blogs/<%= blogs[i].slug %>"><%= blogs[i].title %></a></h4>
                                    <div class="z-blogs__meta d-sm-flex justify-content-between pt-20">
                                        <span>Tarih : <%= blogs[i].createdAt.toDateString() %></span>
                                        <span>Tabiat Anaokulu</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
                <div class="row">
                    <div class="col-lg-12 text-center mt-20 mb-30">
                        <a href="#" class="theme_btn">Daha Fazlası</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<%- include("partials/footer") %>
